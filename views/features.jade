              th Beskrivning
              th URL
          tbody
            each feature in features
              tr 
                td 
                  mixin vote-control( feature )
                td #{feature.name}
                td #{feature.description}
                td 
                  a(href='http://studio-tracker.niklasnorin.se/issues/#{feature.id}') Feature #{feature.id}